<div class="container">
  <div class="row justify-content-center py-5">
    <div class="form-content col-sm-12 col-md-8 col-lg-10 my-5 p-5">
      <%= render "shared/custom-navbar" %>
      <h1>Booking Details</h1>

      <h3>Booking with <%= @user.name %>'s <%= @printer.model %> at <%= @booking.meeting_time %></h3>

      <br>

      <%= link_to edit_booking_path(@booking) do%>
        <i class="fas fa-edit"></i>
      <% end %>
      <%= link_to booking_path(@booking), :method => :delete do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
      <p>Status: <%= @booking.status %></p>
    </div>
  </div>
</div>
