<div class="container">
  <div class="row justify-content-center">
    <div class="form-content col-sm-12 col-md-6 my-5 p-4">
      <div class="card-category mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @printer.photo.key, height: 300, width: 400, crop: :fill %>') ">
      </div>
      <h2><strong>Model: </strong><%= @printer.model %></h2>
      <h2><strong>Price: </strong>$<%= @printer.price %></h2>
      <% if current_user && @printer.user == current_user %>
        <%= link_to "See bookings for this printer", printer_bookings_path(@printer), class: "btn btn-flat mt-3 p-3 w-100" %>
        <%=link_to "Cancel", printers_path(@printer), class: "btn btn-dark rounded mt-3 w-100"%>
      <% elsif user_signed_in? && !current_user.is_owner?%>
        <hr />

        <div>
          <h3>Reviews</h3>
          <% if @printer.reviews.empty? %>
            <p>Be the first to write a review</p>
          <% else %>
            <% @printer.reviews.each do |review| %>
            <div>
              <strong><%= review.name %></strong>
            </div>
            <div>
              <%= review.text %>
            </div>
            <% end %>
            </ul>
          <% end %>
        </div>
        <div class="container container pl-0">
          <div class="row justify-content-left pl-1">
            <div class="form-content col-sm-12 col-md-8 col-lg-12 my-2 p-2">
              <h2 class="mb-4">Book this printer </h2>
                <%= simple_form_for [@printer, @booking] do |f| %>
                <%= f.text_field :meeting_time, placeholder: 'Choose a date that works for you', data: { behavior: "flatpickr" }, class: "mb-4"%>
                <%= f.button :submit, "Book Printer", class: "btn-flat mt-4 py-3 w-100" %>
              <% end %>
              <%=link_to "Cancel", printers_path(@printer), class: "btn btn-danger rounded mt-3 w-100 "%>
              <%=link_to "Add Review", new_printer_review_path(@printer) %>
            </div>
          </div>
        </div>
      <% elsif current_user && current_user.is_owner? %>
        <h1>Stop looking at other people's printers you jealous bitch</h1>
      <%else %>
        <%= link_to "Sign in to book this printer", new_printer_booking_path(@printer), class: "btn btn-flat mt-3" %>
      <%end%>
    </div>
  </div>
</div>
