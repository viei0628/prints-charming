<div class="printers_header m-3">
</div>

<div class = "container">
  <div class="row align-items-start">
    <div class="col">
      <div id="map"
           style="width: 100%; height: 600px; border-radius:5px;"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
    <div class="col p-0">

      <div class="container mt-3 p-0">

        <div class="cards">
          <% @printers.each do |printer| %>
            <div class="card-trip">
              <img src="<%= cl_image_path printer.photo.key, height: 300, width: 400, crop: :fill %>"/>
              <div class="card-trip-infos">
                <div class="col-md-12 text-center">
                  <h2><%= printer.model %></h2>
                  <% if current_user && current_user.is_owner %>
                    <p><%= link_to "See bookings for this printer", printer_bookings_path(printer), class: "btn btn-flat mt-3" %></p>
                  <% else %>
                    <p><%= link_to "Book this printer", printer_path(printer), class: "btn btn-flat mt-3" %></p>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
</div>
